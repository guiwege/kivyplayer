#:import FadeTransition kivy.uix.screenmanager.FadeTransition
#:import random random.random
#:import Factory kivy.factory.Factory
#:import os os
#:import threading threading
#:import partial functools.partial

<FirstScreen>:
    name: 'first'
    FloatLayout:

        BoxLayout:
            orientation: 'vertical'
            canvas:
                Color:
                    rgba: .1, .1, .1, 1
                Rectangle:
                    pos: self.pos
                    size: self.size


            BoxLayout:
                orientation: 'vertical'
                size_hint: 1, None
                #height: dp(100)
                #height: self.minimum_height
                height: bouncing_label.height
                
                RelativeLayout:
                    ButtonLabel:
                        orientation: 'horizontal'
                        on_release: app.scroll_to_playing()
                    Label:
                        size_hint: 1, None
                        height: dp(30)
                        id: bouncing_label
                        text: '>> NOT PLAYING <<'
                        font_size: sp(16)



            ScreenManager:
                id: sm
                transition: FadeTransition()
                Screen:
                    name: 'playlist'

                    BoxLayout:
                        orientation: 'vertical'
                        
                        Label:
                            size_hint: 1, None
                            height: dp(30)
                            text: 'Playlist'

                        RVPlaylist:
                            id: rv
                Screen:
                    name: 'album_image'
                    
                    BoxLayout:
                        orientation: 'vertical'

                        #Label:
                        #    size_hint: 1, None
                        #    height: dp(30)
                        #    text: 'Album related art'

                        ButtonAsyncImage:
                            canvas.before:
                                Color:
                                    rgba: 0, 0, 0, 1
                                Rectangle:
                                    pos: self.pos
                                    size: self.size
                            source: app.song_images[app.song_images_index] if app.song_images else 'icons/black_square.png'
                            allow_stretch: True
                            on_release: app.change_song_image()
                            on_error: app.change_song_image()

                        AnchorLayout:
                            anchor_x: 'center'
                            anchod_y: 'center'
                            size_hint: 1, None
                            height: dp(50)
                            ButtonLabel:
                                size_hint: None, None
                                width: self.parent.height*.7
                                height: self.width
                                r: self.height*0.5
                                canvas.before:
                                    Color:
                                        rgba: (.8, 0, 0, 1) if self.mouse_over else (.3, .3, .3, 0)
                                    RoundedRectangle:
                                        pos: self.pos
                                        size: self.size
                                        radius: [(self.r, self.r), (self.r, self.r), (self.r, self.r), (self.r, self.r)]
                                text: '\u2764'
                                font_name: "DejaVuSans.ttf"
                                color: (1, 1, 1, 1) if self.mouse_over else (.6, .6, .6, 1)
                                on_release: root.open_popup_add_song_to_playlist()



            BoxLayout:
                orientation: 'vertical'
                size_hint: 1, None
                height: dp(30)
                

                BoxLayout:
                    orientation: 'horizontal'
                    Slider:
                        id: time_elapsed_slider
                        min: 0
                        max: 1
                        value: 0
                        step: 0.01
                        cursor_size: (sp(20), sp(20))
                        cursor_image: 'slider_cursor.png'
                        background_horizontal: 'sliderh_background.png'
                        value_track: True
                        value_track_color: 1, 1, 1, .8
                        value_track_width: dp(2)
                        orientation: 'horizontal'

            BoxLayout:
                orientation: 'horizontal'
                size_hint: 1, None
                height: dp(30)
                Label:
                    text: app.song_time_elapsed
                    size_hint: .15, 1
                ButtonLabel:
                    text: '\u25fc'
                    font_name: "DejaVuSans.ttf"
                    #text: '[   ]'
                    on_release: app.song_stop()
                    size_hint: .15, 1
                ButtonLabel:
                    text: '\u25c2\u25c2'
                    font_name: "DejaVuSans.ttf"
                    #text: '<<'
                    size_hint: .10, 1
                    on_release: app.song_prev()
                ButtonLabel:
                    text: '\u25b6'
                    font_name: "DejaVuSans.ttf"
                    #text: '>'
                    size_hint: .10, 1
                    on_release: app.song_play()
                ButtonLabel:
                    text: '\u25b8\u25b8'
                    font_name: "DejaVuSans.ttf"
                    #text: '>>'
                    size_hint: .10, 1
                    on_release: app.song_next()
                #ButtonLabelShuffle:
                AnchorLayout:
                    anchor_x: 'center'
                    anchor_y: 'center'
                    size_hint: .10, 1
                    ButtonLabelToggle:
                        id: shuffle_button
                        #text: '\u279a'
                        #font_name: "DejaVuSans.ttf"
                        #font_size: sp(24)
                        #text: 'X'
                        size_hint: None, None
                        size: (30, 30)
                        canvas.before:
                            Color:
                                rgba: (0, 1, 1, 1) if self.toggle else (1, 1, 1, 1)
                            Rectangle:
                                pos: self.pos
                                size: self.size
                                source: 'icons/shuffle_2.png'

                Slider:
                    id: volume_slider
                    size_hint: .20, 1
                    min: 0.0
                    max: 0.1
                    step: 0.001
                    value: app.volume
                    on_value: app.on_volume_value()
                    cursor_size: (sp(20), sp(20))
                    cursor_image: 'slider_cursor.png'
                    background_horizontal: 'sliderh_background.png'
                    orientation: 'horizontal'


            BoxLayout:
                orientation: 'horizontal'
                size_hint: 1, None
                height: dp(25)

                #ButtonLabel:
                ButtonImage:
                    #text: 'Load dir'
                    source: 'icons/load_dir.png'
                    #on_press: app.load_from_dir_open_popup(app.root.ids.settings_screen.browse_dir)
                    #on_press: Factory.PopupDirChooser(app.load_songs_from_dir, path=app.root.ids.settings_screen.browse_dir).open()
                    on_press: root.open_popup_dir_chooser()

                #ButtonLabel:
                ButtonImage:
                    #text: 'Load PL'
                    source: 'icons/load_playlist.png'
                    on_press: root.open_popup_load_playlist()

                #ButtonLabel:
                ButtonImage:
                    #text: 'Save to PL'
                    source: 'icons/save_playlist.png'
                    on_press: root.open_popup_save_to_playlist()

                AnchorLayout:
                    anchor_x: 'center'
                    anchor_y: 'center'

                    ButtonLabel:
                    #ButtonImage:
                        size_hint: None, None
                        width: self.parent.height
                        height: self.parent.height
                        #text: 'Cinema'
                        text: ''
                        #source: 'icons/cinema_mode.png'
                        on_release: sm.current = 'album_image' if sm.current=='playlist' else 'playlist'
                        canvas.before:
                            Color:
                                rgba: (1, 1, 1, 1) if root.ids.sm.current=='playlist' else (0, 1, 1, 1)
                            Rectangle:
                                pos: self.pos
                                size: self.size
                                source: 'icons/cinema_mode.png'

                ButtonLabel:
                    text: 'Clear'
                    on_press: app.songs_clear()

                ButtonLabel:
                    text: 'Settings'
                    on_press: app.goto_settings_screen()
            Widget:
                size_hint: 1, None
                height: dp(5)

