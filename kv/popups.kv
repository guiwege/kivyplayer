<PopupDirChooser>:
    size_hint: .8, .8
    auto_dismiss: True
    #title: fc.selection[0] if hasattr(fc, 'selection') and len(fc.selection)>0 else app.root.ids.settings_screen.browse_dir
    #title: root.selection or fc.path
    
    BoxLayout:
        orientation: 'vertical'

        FileChooser:
            id: fc
            path: root.path
            #height: dp(root.height*0.3) if label_playlists_path.toggle else dp(0)
            dirselect: True
            #on_selection: root.selection = self.selection and self.selection[0] or ''
            on_selection: root.on_selection()
            #selection: root.selection
            filters: ['']
            #FileChooserIconLayout
            FileChooserListLayout

        Button:
            #disabled: False if hasattr(fc, 'selection') and len(fc.selection)>0 else True
            size_hint: 1, None
            height: dp(30)
            text: 'Select'
            on_release: root.select()


<PopupCreatePlaylist>:
    playlist_name: input_playlist_name.text
    #size_hint: .8, .8
    size_hint: .8, None
    height: box.minimum_height + dp(20)
    auto_dismiss: False
    title: 'Playlist name:'

    BoxLayout:
        id: box
        orientation: 'vertical'
        Label:
            size_hint: 1, None
            height: dp(30)
            text: ''
        TextInput:
            size_hint: 1, None
            height: dp(30)
            id: input_playlist_name
            multiline: False
            text: root.playlist_name
            on_text: root.set_playlist_name()
        BoxLayout: 
            size_hint: 1, None
            height: dp(30)
            orientation: 'horizontal'
            ButtonLabel:
                text: 'Cancel'
                on_release: root.cancel()
            ButtonLabel:
                text: 'Create'
                on_release: root.create()
