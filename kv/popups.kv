<PopupAddSongToPlaylist>:
    id: pop
    size_hint: .8, .6
    auto_dismiss: True
    title: 'Playlists'
    title_align: 'center'
    BoxLayout:
        orientation: 'vertical'
        Widget: 
            size_hint: 1, None
            height: dp(10)
        Label:
            id: song_name
            size_hint: 1, None
            #height: dp(30)
            text_size: root.width-root.width*.1, None
            size: self.texture_size
            halign: 'center'
            text: root.song_name

        Widget: 
            size_hint: 1, None
            height: dp(10)

        PopupAddSongToPlaylistRV:
            id: popup_rv
            canvas.before:
                Color:
                    #rgba: .1, .1, .1, 1
                    rgba: .05, .05, .05, 1
                Rectangle:
                    pos: self.pos
                    size: self.size

            ScrollView:
                id: sv
                do_scroll_x: False
                do_scroll_y: True
                scroll_type: ['bars', 'content']
                bar_width: app.bar_width/2
                bar_color: 1, 1, 1, .4
                bar_inactive_color: 1, 1, 1, .1
                #scroll_wheel_distance: 0
                StackLayout:
                    size_hint_y: None
                    height: self.minimum_height
                    orientation: 'lr-tb'

        BoxLayout:
            orientation: 'horizontal'
            size_hint: 1, None
            height: dp(30)
            ButtonLabel:
                #size_hint: None, 1
                #width: self.texture_size[0] + (self.texture_size[0]/1.5)
                text: 'Create New Playlist'
                #on_release: Factory.PopupCreatePlaylist(do_before_dismiss_callback=(root.show_playlists)).open()
                on_release: root.open_create_empty_playlist_popup()
            ButtonLabel:
                text: 'Close'
                on_release: root.dismiss()


<PopupAddSongToPlaylistItem>:
    orientation: 'horizontal'
    size_hint: 1, None
    height: dp(50)
    ax: 'left'

    canvas.before:
        Color:
            rgba: (.14, .14, .14, 1) if self.mouse_over else (.12, .12, .12, 1)
        Rectangle:
            pos: self.pos
            size: self.size
        Color:
            rgba: .05, .05, .05, 1
        #Line:
        #    points: self.x, self.y, self.width, self.y
        Line:
            points: self.x, self.y+self.height-1, self.width, self.y+self.height-1
    Widget: # padding
        size_hint: None, 1
        width: dp(10)
    BoxLayout: 
        orientation: 'vertical'
        AnchorLayout:
            anchor_x: root.ax
            size_hint: 1, .6
            Label:
                id: playlist_name
                size_hint: None, None
                #width: self.texture_size[0]
                size: self.texture_size
                text: root.playlist_name
        BoxLayout:
            orientation: 'horizontal'
            size_hint: 1, .4
            AnchorLayout:
                anchor_x: root.ax
                anchor_y: 'top'
                Label:
                    id: counts
                    size_hint: None, None
                    size: self.texture_size
                    font_size: sp(10)
                    text: "Songs: " + str(root.songs_total)
            AnchorLayout:
                anchor_x: root.ax
                anchor_y: 'top'
                Label:
                    id: counts
                    size_hint: None, None
                    size: self.texture_size
                    font_size: sp(10)
                    text: "This song: " + str(root.song_count)

    AnchorLayout:
        anchor_x: 'center'
        anchor_y: 'center'
        size_hint: None, 1
        width: self.height
        ButtonLabel:
            size_hint: None, None
            width: self.parent.width*.7
            height: self.width
            r: self.height*0.5
            
            canvas.before:
                Color:
                    rgba: (.8, 0, 0, 1) if self.mouse_over else (.3, .3, .3, 0)
                RoundedRectangle:
                    pos: self.pos
                    size: self.size
                    radius: [(self.r, self.r), (self.r, self.r), (self.r, self.r), (self.r, self.r)]
            text: '\u2764'
            font_name: "DejaVuSans.ttf"
            color: (1, 1, 1, 1) if self.mouse_over else (.6, .6, .6, 1)
            on_release: root.playlist_add()

    

